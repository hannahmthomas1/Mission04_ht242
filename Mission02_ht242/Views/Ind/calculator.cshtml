@{
    ViewData["Title"] = "Grade Calculator";
}

@model calculatorModel

<!--grade calculator form-->
<div class="calculator">
    <br /><br />
    <h2>Grade Calculator</h2>
    <p>Enter grade percentages for each category as a whole number. </p>
    <p> For example, '90%' should be entered as '90'. </p>
    <form method="post">
        <label>
            Assignments:
        </label>
        <input type="text" asp-for="assignments" id="assignments" />
        <br /> <br />

        <label>
            Group Project:
        </label>
        <input type="text" asp-for="group" />
        <br /><br />

        <label>
            Quizzes:
        </label>
        <input type="text" asp-for="quizzes" id="quizzes" />
        <br /><br />

        <label>
            Midterm Exam:
        </label>
        <input type="text" asp-for="midterm" id="midterm" />
        <br /><br />

        <label>
            Final Exam:
        </label>
        <input type="text" asp-for="final" id="final" />
        <br /><br />

        <label>
            INTEX:
        </label>
        <input type="text" asp-for="intex" id="intex" />
        <br /><br />

        <input type="submit" id="submit" value="Calculate" />
        <br /><br />
 
        <div asp-validation-summary="All"></div>
    </form>

</div>

